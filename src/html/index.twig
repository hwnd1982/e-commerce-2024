{% extends "layouts/base.twig" %}

{% set properties = {
  title: "e-commerce-2024",
  script: "index"
} %}

{% set cases = [
  {
    name: "nashenka",
    text: "Нашенька: запуск магазина в экстремальные сроки",
  },
  {
    name: "sarma",
    text: "Сарма Мебель: разработка интернет-магазина",
  },
    {
    name: "orimex",
    text: "Оримэкс: разработка интернет-магазина",
  },
    {
    name: "kixbox",
    text: "Castorama: перенос с Magento на Битрикс, много интеграций и разработка PIM-системы на PimСore",
  },
  {
    name: "monsher",
    text: "Monsher: разработка интернет-магазина",
  },
] %}

{% block content %}

  {% include "./blocks/cap.twig" %}
  {% include "./blocks/cases.twig" with {
    props: {
      cases: cases,
  }} only  %}
  {% include "./blocks/data-driven.twig" %}
  {% include "./blocks/key-stages.twig" %}
  {% include "./blocks/design-support-request.twig" %}
{% endblock %}

{% block modals %}
  {% for case in cases %}
    {% include "./components/modals/case-" ~ case.name ~ "-modal.twig" with {
      props: {
        currentId: case.name,
        cases: cases,
      }
    } only %}
  {% endfor %}
{% endblock %}